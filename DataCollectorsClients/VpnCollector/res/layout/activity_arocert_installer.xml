<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

  <Button
        android:id="@+id/btn_cert_install"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Install Cert" />

    <TextView
        android:id="@+id/stateStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_cert_install"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/btn_cert_install"
        android:layout_toRightOf="@+id/btn_cert_install"
        android:text="not" />

    <TextView
        android:id="@+id/labelExternalStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stateStore"
        android:layout_toLeftOf="@+id/btn_cert_install"
        android:layout_toStartOf="@+id/btn_cert_install"
        android:text="external storage" />

    <TextView
        android:id="@+id/labelCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/labelExternalStorage"
        android:layout_alignRight="@+id/labelExternalStorage"
        android:layout_below="@+id/labelExternalStorage"
        android:layout_marginTop="23dp"
        android:text="cert" />

    <TextView
        android:id="@+id/stateCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stateStore"
        android:layout_alignStart="@+id/stateStore"
        android:layout_alignTop="@+id/labelCert"
        android:text="not" />

</RelativeLayout>
